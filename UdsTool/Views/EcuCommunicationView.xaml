<UserControl x:Class="UdsTool.Views.EcuCommunicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UdsTool.Views"
             xmlns:converters="clr-namespace:UdsTool.Utils.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0">
            <ComboBox Width="150" ItemsSource="{Binding Interfaces}" SelectedItem="{Binding SelectedInterface}" IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Content="Connect" Command="{Binding ConnectCommand}" Margin="5,0" Padding="5,0"/>
            <Button Content="Disconnect" Command="{Binding DisconnectCommand}" Margin="5,0" Padding="5,0"/>
            <Separator/>
            <Button Content="ISO-TP Config" Command="{Binding ConfigureIsoTpCommand}" Margin="5,0" Padding="5,0"/>
            <Button Content="Clear Log" Command="{Binding ClearLogCommand}" Margin="5,0" Padding="5,0"/>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- Request/Response -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Request Panel -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Request (hex):" Margin="5,5,5,0" FontWeight="Bold"/>
                    <TextBox Grid.Row="1" Text="{Binding RequestHex, UpdateSourceTrigger=PropertyChanged}" 
                             AcceptsReturn="True" TextWrapping="Wrap" Margin="5" VerticalScrollBarVisibility="Auto"/>
                    <Button Grid.Row="2" Content="Send Request" Command="{Binding SendRequestCommand}" 
                            HorizontalAlignment="Right" Margin="5"/>
                </Grid>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                <!-- Response Panel -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Response (hex):" Margin="5,5,5,0" FontWeight="Bold"/>
                    <TextBox Grid.Row="1" Text="{Binding ResponseHex, Mode=TwoWay}" IsReadOnly="True" 
                             TextWrapping="Wrap" Margin="5" VerticalScrollBarVisibility="Auto" Background="#F8F8F8"/>
                </Grid>
            </Grid>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Log Panel -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Message Log:" Margin="5,5,5,0" FontWeight="Bold"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding MessageLog}" Margin="5" FontFamily="Consolas" FontSize="12"/>
            </Grid>

            <!-- ISO-TP Configuration Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="3" Background="#E0FFFFFF" 
                    Visibility="{Binding ShowIsoTpConfig, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border BorderBrush="LightGray" BorderThickness="1" Background="White" 
                        Width="500" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ISO-TP Configuration" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <ScrollViewer Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Request CAN ID (hex):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding IsoTpConfig.RequestCanId, StringFormat=X3}" Margin="5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Response CAN ID (hex):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding IsoTpConfig.ResponseCanId, StringFormat=X3}" Margin="5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Block Size:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding IsoTpConfig.BlockSize}" Margin="5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Separation Time (ms):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding IsoTpConfig.SeparationTime}" Margin="5"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Timeout (ms):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding IsoTpConfig.Timeout}" Margin="5"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Padding Enabled:" VerticalAlignment="Center" Margin="0,5"/>
                                <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding IsoTpConfig.PaddingEnabled}" VerticalAlignment="Center" Margin="5"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Extended Addressing:" VerticalAlignment="Center" Margin="0,5"/>
                                <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding IsoTpConfig.ExtendedAddressing}" VerticalAlignment="Center" Margin="5"/>

                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Use CAN FD:" VerticalAlignment="Center" Margin="0,5"/>
                                <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding IsoTpConfig.UseCanFd}" VerticalAlignment="Center" Margin="5"/>
                            </Grid>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Load" Command="{Binding LoadIsoTpConfigCommand}" Margin="5" Padding="10,3"/>
                            <Button Content="Save" Command="{Binding SaveIsoTpConfigCommand}" Margin="5" Padding="10,3"/>
                            <Button Content="Close" Command="{Binding ConfigureIsoTpCommand}" Margin="5" Padding="10,3"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</UserControl>