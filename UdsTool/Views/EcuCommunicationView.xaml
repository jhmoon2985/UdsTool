<UserControl x:Class="UdsTool.Views.EcuCommunicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UdsTool.Views"
             xmlns:models="clr-namespace:UdsTool.Models"
             xmlns:converters="clr-namespace:UdsTool.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:NotNullConverter x:Key="NotNullConverter" />
        <converters:BoolToDirectionConverter x:Key="BoolToDirectionConverter" />
        <converters:VisibilityConverter x:Key="VisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 툴바 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F5F5F5" Margin="0,0,0,5">
            <TextBlock Text="포트:" VerticalAlignment="Center" Margin="5" />
            <TextBox Text="{Binding PortName}" Width="80" />
            <Button Content="연결" Command="{Binding ConnectCommand}" />
            <Button Content="연결 해제" Command="{Binding DisconnectCommand}" />
            <Separator Margin="5,0" />
            <Button Content="설정 로드" Command="{Binding LoadConfigCommand}" />
            <Button Content="ISO-TP 설정 저장" Command="{Binding SaveIsoTpSettingsCommand}" />
            <Button Content="로그 지우기" Command="{Binding ClearLogsCommand}" />
        </StackPanel>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 패널 - 트리뷰 및 요청 편집 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <!-- UDS 설정 트리뷰 -->
                <GroupBox Grid.Row="0" Header="UDS 서비스">
                    <TreeView ItemsSource="{Binding Services}">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type models:UdsSid}" ItemsSource="{Binding Subfunctions}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Id}" Foreground="Blue" />
                                </StackPanel>
                            </HierarchicalDataTemplate>

                            <HierarchicalDataTemplate DataType="{x:Type models:UdsSubfunction}" ItemsSource="{Binding Dids}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Id}" Foreground="Green" />
                                </StackPanel>
                            </HierarchicalDataTemplate>

                            <DataTemplate DataType="{x:Type models:UdsDid}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Id}" Foreground="Purple" />
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>

                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </GroupBox>

                <!-- 스플리터 -->
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

                <!-- 요청 편집 -->
                <GroupBox Grid.Row="2" Header="요청 편집">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0" Text="{Binding RequestText, UpdateSourceTrigger=PropertyChanged}" 
                                 AcceptsReturn="True" TextWrapping="Wrap" />

                        <Button Grid.Row="1" Content="요청 전송" Command="{Binding SendRequestCommand}" 
                                HorizontalAlignment="Right" Margin="0,5,0,0" />
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- 스플리터 -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

            <!-- 오른쪽 패널 - 통신 프레임 표시 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ISO-TP 설정 섹션 -->
                <Expander Grid.Row="0" Header="ISO-TP 설정" IsExpanded="False">
                    <ContentControl Content="{Binding IsoTpSettings}" />
                </Expander>

                <!-- 프레임 로그 -->
                <GroupBox Grid.Row="1" Header="프레임 로그">
                    <ListView ItemsSource="{Binding Frames}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="시간" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Timestamp, StringFormat=\{0:yyyy-MM-dd HH:mm:ss.fff\}}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="타입" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FrameType}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="방향" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsTransmitted, Converter={StaticResource BoolToDirectionConverter}}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="데이터" Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding HexData}" TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="설명" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- 상태 표시줄 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBar>
    </Grid>
</UserControl>