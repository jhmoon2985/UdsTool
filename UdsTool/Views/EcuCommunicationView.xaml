<UserControl x:Class="UdsTool.Views.EcuCommunicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UdsTool.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Command="{Binding LoadConfigurationCommand}" ToolTip="Load Configuration">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Load Config" Margin="3,0"/>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Command="{Binding ConnectCommand}" ToolTip="Connect to ECU">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Connect" Margin="3,0"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding DisconnectCommand}" ToolTip="Disconnect from ECU">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Disconnect" Margin="3,0"/>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Command="{Binding ClearHistoryCommand}" ToolTip="Clear Response History">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Clear History" Margin="3,0"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel - Commands and connection settings -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Command List -->
                <GroupBox Header="UDS Commands" Grid.Row="0">
                    <Grid>
                        <ListBox ItemsSource="{Binding Commands}" 
                                 SelectedItem="{Binding SelectedCommand}"
                                 DisplayMemberPath="Name"
                                 Margin="5"/>
                    </Grid>
                </GroupBox>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#DDDDDD"/>

                <!-- Connection Settings -->
                <GroupBox Header="Connection Settings" Grid.Row="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5">
                            <TextBlock Text="Interface Type:" Margin="0,5,0,0"/>
                            <ComboBox SelectedItem="{Binding Configuration.ConnectionSettings.InterfaceType}" Margin="0,0,0,5">
                                <ComboBoxItem>CAN</ComboBoxItem>
                                <ComboBoxItem>K-Line</ComboBoxItem>
                                <ComboBoxItem>Ethernet</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Device ID:" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding Configuration.ConnectionSettings.DeviceId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <TextBlock Text="Baudrate:" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding Configuration.ConnectionSettings.Baudrate, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <TextBlock Text="Source Address (Hex):" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding Configuration.ConnectionSettings.SourceAddress, StringFormat=X2, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <TextBlock Text="Target Address (Hex):" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding Configuration.ConnectionSettings.TargetAddress, StringFormat=X2, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <TextBlock Text="Timeout (ms):" Margin="0,5,0,0"/>
                            <TextBox Text="{Binding Configuration.ConnectionSettings.TimeoutMs, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <Button Content="Send Command" 
                                    Command="{Binding SendCommand}"
                                    Margin="0,10,0,5" Padding="5"
                                    Background="#007ACC" Foreground="White"/>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#DDDDDD"/>

            <!-- Right panel - Response viewer -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Last Response -->
                <GroupBox Header="Last Response" Grid.Row="0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" Margin="0,5,5,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LastResponse.IsPositive, Converter={StaticResource BoolToResponseTypeConverter}}" Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Service ID:" Margin="0,5,5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastResponse.ServiceId, StringFormat=0x{0:X2}}" Margin="0,5,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Raw Data:" Margin="0,5,5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LastResponse.ResponseAsHex}" Margin="0,5,0,0"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </GroupBox>

                <!-- Response History -->
                <GroupBox Header="Response History" Grid.Row="1" Grid.RowSpan="3">
                    <ListView ItemsSource="{Binding ResponseHistory}" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" Width="100"/>
                                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding IsPositive, Converter={StaticResource BoolToResponseTypeConverter}}" Width="80"/>
                                <GridViewColumn Header="SID" DisplayMemberBinding="{Binding ServiceId, StringFormat=0x{0:X2}}" Width="60"/>
                                <GridViewColumn Header="Data" DisplayMemberBinding="{Binding ResponseAsHex}" Width="300"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock>
                    <Run Text="Connection Status:"/>
                    <Run Text="{Binding IsConnected, Converter={StaticResource BoolToConnectionStatusConverter}}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
