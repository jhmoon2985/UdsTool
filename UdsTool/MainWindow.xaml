<Window x:Class="UdsTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdsTool"
        xmlns:viewmodels="clr-namespace:UdsTool.ViewModels"
        xmlns:views="clr-namespace:UdsTool.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:XmlEditorViewModel}">
            <views:XmlEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:EcuCommunicationViewModel}">
            <views:EcuCommunicationView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- Main menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_XML Editor" Command="{Binding ShowXmlEditorCommand}"/>
                <MenuItem Header="_ECU Communication" Command="{Binding ShowEcuCommunicationCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="MenuItem_About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Navigation panel -->
        <StackPanel DockPanel.Dock="Left" Width="150" Background="#F0F0F0">
            <TextBlock Text="Navigation" FontWeight="Bold" Margin="10,10,10,5"/>
            <Button Content="XML Editor" 
                    Command="{Binding ShowXmlEditorCommand}" 
                    Margin="10,5" Padding="5"/>
            <Button Content="ECU Communication" 
                    Command="{Binding ShowEcuCommunicationCommand}" 
                    Margin="10,5" Padding="5"/>
        </StackPanel>

        <!-- Main content area -->
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </DockPanel>
</Window>
