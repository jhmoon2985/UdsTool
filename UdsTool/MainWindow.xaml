<Window x:Class="UdsTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdsTool"
        xmlns:views="clr-namespace:UdsTool.Views"
        xmlns:viewModels="clr-namespace:UdsTool.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="768" 
        Width="1024" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <!-- ViewModel에 따른 View 데이터 템플릿 -->
        <DataTemplate DataType="{x:Type viewModels:XmlEditorViewModel}">
            <views:XmlEditorView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:EcuCommunicationViewModel}">
            <views:EcuCommunicationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:IsoTpSettingsViewModel}">
            <views:IsoTpSettingsView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- 상단 메뉴 바 -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#F0F0F0" Margin="0,0,0,5">
            <Button Content="XML 편집" Style="{StaticResource NavButtonStyle}" Command="{Binding ShowXmlEditorCommand}" />
            <Button Content="ECU 통신" Style="{StaticResource NavButtonStyle}" Command="{Binding ShowEcuCommunicationCommand}" />
        </StackPanel>

        <!-- 메인 콘텐츠 영역 -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
